<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cyber Posture Cleaner" Height="600" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="System Cleanup">
                <StackPanel Margin="10">
                    <Button Content="Clean Temp Files" x:Name="btnTemp" Margin="5"/>
                    <Button Content="Empty Recycle Bin" x:Name="btnRecycle" Margin="5"/>
                    <Button Content="Clear Browser Cache" x:Name="btnBrowser" Margin="5"/>
                    <Button Content="Erase Privacy Data" x:Name="btnPrivacy" Margin="5"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Network Scanner">
                <StackPanel Margin="10">
                    <Button Content="Scan Network" x:Name="btnScan" Margin="5"/>
                    <Button Content="Export Results" x:Name="btnExport" Margin="5"/>
                    <ListBox x:Name="lstScanResults" Height="250" Margin="5"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Admin">
                <StackPanel Margin="10">
                    <TextBox x:Name="txtUsername" Margin="5"/>
                    <Button Content="Add User" x:Name="btnAddUser" Margin="5"/>
                    <Button Content="Remove User" x:Name="btnRemoveUser" Margin="5"/>
                    <Button Content="Create Restore Point" x:Name="btnRestore" Margin="5"/>
                    <Button Content="Toggle Dark Mode" x:Name="btnTheme" Margin="5"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="System Health">
                <StackPanel Margin="10">
                    <Button Content="Refresh Dashboard" x:Name="btnRefresh" Margin="5"/>
                    <TextBlock x:Name="txtHealth" Text="System health will appear here..." Margin="5" TextWrapping="Wrap"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        <TextBlock Text="Cyber Posture LLC | @ Privacy all rights reserved"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>
